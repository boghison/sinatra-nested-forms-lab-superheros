<h1>Create a Team and Heroes!</h1>

<form action="/teams" method="POST">
  <p>Team Name: <input type="text" name="team[name]"></p>
  <p>Team Motto: <input type="text" name="team[motto]"></p>

  <%(1..3).each do |i|%>
    <h2>Hero <%=i%></h2>
    <p>Hero's Name: <input type="text" id="member<%=i%>_name" name="team[members][][name]"></p>
    <p>Hero's Power: <input type="text" id="member<%=i%>_power" name="team[members][][power]"></p>
    <p>Hero's Biography: <input type="text" id="member<%=i%>_bio" name="team[members][][bio]"></p>
  <% end %>

  <input type="submit" name="submit" value="submit">
</form>